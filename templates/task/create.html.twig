{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-column align-items-center">
        {{ form_start(form, {'action': path('task_create'), 'attr': {'class': 'col-6'}}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success">Ajouter</button>
        {{ form_end(form) }}
        <a href="{{ path('task_list', { 'done': false }) }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>
{% endblock %}
